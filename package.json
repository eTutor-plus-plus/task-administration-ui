{
  "name": "task-administration-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run version && ng serve",
    "build": "npm run version && ng build",
    "build-prod": "npm run version && ng build --configuration production --aot --base-href=/app/",
    "watch": "npm run version && ng build --watch --configuration development",
    "test": "npm run version && ng test",
    "test-ci": "npm run version && ng test --ci --reporters=default --reporters=jest-junit",
    "version": "node version.js",
    "commit": "cz",
    "release": "commit-and-tag-version",
    "postinstall": "git config --local core.hooksPath .git-hooks/"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.1.2",
    "@fortawesome/fontawesome-free": "^6.5.1",
    "@ngneat/transloco": "^6.0.4",
    "jose": "^5.1.3",
    "lodash-es": "^4.17.21",
    "luxon": "^3.4.4",
    "ngx-monaco-editor-v2": "^17.0.1",
    "normalize.css": "^8.0.1",
    "primeflex": "^3.3.1",
    "primeicons": "^6.0.1",
    "primeng": "^17.2.0",
    "quill": "^1.3.7",
    "quill-html-edit-button": "^2.2.13",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-builders/jest": "^17.0.0",
    "@angular-devkit/build-angular": "^17.0.8",
    "@angular/cli": "^17.0.8",
    "@angular/compiler-cli": "^17.0.0",
    "@angular/localize": "^17.0.8",
    "@types/jest": "^29.5.11",
    "@types/lodash-es": "^4.17.12",
    "@types/luxon": "^3.3.7",
    "@types/quill": "^2.0.14",
    "commit-and-tag-version": "^12.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "git-repo-info": "^2.1.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-preset-angular": "^13.1.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  }
}
