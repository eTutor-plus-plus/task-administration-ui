{
  "name": "task-administration-ui",
  "version": "1.3.1",
  "scripts": {
    "ng": "ng",
    "start": "npm run version && ng serve",
    "build": "npm run version && ng build",
    "build-prod": "npm run version && ng build --configuration production --aot --base-href=/app/",
    "watch": "npm run version && ng build --watch --configuration development",
    "test": "npm run version && ng test",
    "test-ci": "npm run version && ng test --ci --reporters=default --reporters=jest-junit",
    "version": "node version.js",
    "commit": "cz",
    "release": "commit-and-tag-version",
    "postinstall": "git config --local core.hooksPath .git-hooks/"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.1",
    "@angular/common": "^18.0.1",
    "@angular/compiler": "^18.0.1",
    "@angular/core": "^18.0.1",
    "@angular/forms": "^18.0.1",
    "@angular/platform-browser": "^18.0.1",
    "@angular/platform-browser-dynamic": "^18.0.1",
    "@angular/router": "^18.0.1",
    "@angular/service-worker": "^18.0.1",
    "@fortawesome/fontawesome-free": "^6.6.0",
    "@ngneat/transloco": "^6.0.4",
    "@tiptap/core": "^2.4.0",
    "@tiptap/extension-image": "^2.4.0",
    "@tiptap/extension-link": "^2.4.0",
    "@tiptap/extension-table": "^2.4.0",
    "@tiptap/extension-table-cell": "^2.4.0",
    "@tiptap/extension-table-header": "^2.4.0",
    "@tiptap/extension-table-row": "^2.4.0",
    "@tiptap/extension-text-align": "^2.4.0",
    "@tiptap/extension-underline": "^2.4.0",
    "@tiptap/pm": "^2.4.0",
    "@tiptap/starter-kit": "^2.4.0",
    "jose": "^5.1.3",
    "lodash-es": "^4.17.21",
    "luxon": "^3.4.4",
    "ngx-monaco-editor-v2": "^18.0.1",
    "ngx-tiptap": "^11.0.0",
    "normalize.css": "^8.0.1",
    "primeflex": "^3.3.1",
    "primeicons": "^7.0.0",
    "primeng": "^17.18.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-builders/jest": "^18.0.0-beta.3",
    "@angular/build": "^18.0.2",
    "@angular/cli": "^18.0.2",
    "@angular/compiler-cli": "^18.0.1",
    "@angular/localize": "^18.0.1",
    "@happy-dom/jest-environment": "^14.12.0",
    "@types/jest": "^29.5.11",
    "@types/lodash-es": "^4.17.12",
    "@types/luxon": "^3.3.7",
    "@types/quill": "^2.0.14",
    "commit-and-tag-version": "^12.4.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "git-repo-info": "^2.1.1",
    "happy-dom": "^14.12.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-preset-angular": "^14.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "commit-and-tag-version": {
    "skip": {
      "tag": true,
      "changelog": true
    }
  }
}
